<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:text">@string/header</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">50dp</item>
    </style>
    
    <style name="AmbeeNoTitle" parent="@style/AppTheme">
        
    </style>
    
    <style name="StaticText" parent="android:style/TextAppearance.Large">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">28sp</item>
    </style>
    
    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
    	<item name="android:textSize">28sp</item>
    	<item name="android:singleLine">true</item>
	</style>
	
    
    <style name="EqItem">
		<item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>       
        <item name="android:background">#ff0000</item>
        <item name="android:layout_marginLeft">2dp</item>
    </style>
    
    <style name="EqItemSpacer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>"
    </style>
    
    <style name="DrawView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="EqBackground">
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="Description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
